<h1 class="mt-4 mb-3">All Flats</h1>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><i class="fas fa-map-marker-alt"></i> <%= flat.address %></p>
          <p class="card-text"><%= flat.description.truncate(100) %></p>
          <p class="card-text"><strong>Price per night:</strong> Â£<%= flat.price_per_night %></p>
          <p class="card-text"><strong>Number of guests:</strong> <%= flat.number_of_guests %></p>
          <div class="d-flex justify-content-between align-items-center">
            <%= link_to 'View Details', flat_path(flat), class: 'btn btn-primary btn-sm' %>
            <%= link_to "Edit", edit_flat_path(flat), class: "ms-3 text-warning" %>
            <%= link_to 'Delete', flat, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="text-center">
  <%= link_to 'Add New Flat', new_flat_path, class: 'btn btn-success btn-lg' %>
</div>

<div class="container">
  <h1 class="my-4"></h1>

  <%= form_with model: @flat, local: true, html: { class: 'row g-3' } do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'Enter flat name' %>
    </div>
    <div class="mb-3">
      <%= form.label :address, class: 'form-label' %>
      <%= form.text_field :address, class: 'form-control', placeholder: 'Enter address' %>
    </div>
    <div class="mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control', rows: 4, placeholder: 'Enter description' %>
    </div>
    <div class="row g-3">
      <div class="col-md-6 mb-3">
        <%= form.label :price_per_night, class: 'form-label' %>
        <div class="input-group">
          <span class="input-group-text">Â£</span>
          <%= form.number_field :price_per_night, class: 'form-control', placeholder: 'Enter price per night' %>
        </div>
      </div>
      <div class="col-md-6 mb-3">
        <%= form.label :number_of_guests, class: 'form-label' %>
        <%= form.number_field :number_of_guests, class: 'form-control', placeholder: 'Enter number of guests' %>
      </div>
    </div>
    <div class="mb-3">
      <%= form.submit button_text, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
